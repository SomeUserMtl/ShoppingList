<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Item Name"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_quantity" />

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Quantity"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="Add"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_quantity" />

    <TextView
        android:id="@+id/tv_milk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Milk $3"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_milk"
        app:layout_constraintStart_toStartOf="@+id/tv_item_name" />

    <TextView
        android:id="@+id/tv_eggs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eggs $2"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_eggs"
        app:layout_constraintStart_toStartOf="@+id/tv_milk" />

    <TextView
        android:id="@+id/tv_beef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beef $23"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_beef"
        app:layout_constraintStart_toStartOf="@+id/tv_eggs" />

    <TextView
        android:id="@+id/tv_buiscuits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buiscuits 2.5"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_buiscuits"
        app:layout_constraintStart_toStartOf="@+id/tv_soda" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Veggie $4"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_veggies"
        app:layout_constraintStart_toStartOf="@+id/tv_fruits" />

    <TextView
        android:id="@+id/tv_fruits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fruit $6.5"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_fruits"
        app:layout_constraintStart_toStartOf="@+id/tv_buiscuits" />

    <TextView
        android:id="@+id/tv_soda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soda $1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_soda"
        app:layout_constraintStart_toStartOf="@+id/tv_beef" />

    <EditText
        android:id="@+id/et_milk"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_quantity" />

    <EditText
        android:id="@+id/et_eggs"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/et_milk"
        app:layout_constraintTop_toBottomOf="@+id/et_milk" />

    <EditText
        android:id="@+id/et_beef"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/et_eggs"
        app:layout_constraintTop_toBottomOf="@+id/et_eggs" />

    <EditText
        android:id="@+id/et_soda"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/et_beef"
        app:layout_constraintTop_toBottomOf="@+id/et_beef" />

    <EditText
        android:id="@+id/et_buiscuits"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/et_soda"
        app:layout_constraintTop_toBottomOf="@+id/et_soda" />

    <EditText
        android:id="@+id/et_fruits"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/et_buiscuits"
        app:layout_constraintTop_toBottomOf="@+id/et_buiscuits" />

    <EditText
        android:id="@+id/et_veggies"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/et_fruits"
        app:layout_constraintTop_toBottomOf="@+id/et_fruits" />

    <CheckBox
        android:id="@+id/cb_milk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_milk"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/cb_veggies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/et_veggies"
        app:layout_constraintEnd_toEndOf="@+id/cb_fruits" />

    <CheckBox
        android:id="@+id/cb_fruits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/et_fruits"
        app:layout_constraintEnd_toEndOf="@+id/cb_buiscuits" />

    <CheckBox
        android:id="@+id/cb_buiscuits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/et_buiscuits"
        app:layout_constraintEnd_toEndOf="@+id/cb_soda" />

    <CheckBox
        android:id="@+id/cb_soda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/et_soda"
        app:layout_constraintEnd_toEndOf="@+id/cb_beef" />

    <CheckBox
        android:id="@+id/cb_beef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/et_beef"
        app:layout_constraintEnd_toEndOf="@+id/cb_eggs" />

    <CheckBox
        android:id="@+id/cb_eggs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/et_eggs"
        app:layout_constraintEnd_toEndOf="@+id/cb_milk" />

    <Button
        android:id="@+id/btn_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Checkout"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/tv_total_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:text="Total     $"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/btn_checkout"
        app:layout_constraintTop_toBottomOf="@+id/et_veggies" />

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tv_total_lbl"
        app:layout_constraintTop_toTopOf="@+id/tv_total_lbl" />

</androidx.constraintlayout.widget.ConstraintLayout>